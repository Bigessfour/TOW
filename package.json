{
  "name": "town-of-wiley-website",
  "version": "1.0.0",
  "description": "Official website for the Town of Wiley - ADA compliant municipal government website",
  "main": "index.html",
  "scripts": {
    "setup": "echo Setting up Node.js PATH... && powershell -Command \"$env:PATH += ';C:\\Program Files\\nodejs'\" && node --version && npm --version",
    "format:fix": "npx prettier --write .",
    "start": "http-server -p 3000 -c-1 -a localhost -o index.html",
    "dev": "http-server -p 5500 -c-1 -a localhost -o index.html",
    "debug": "http-server -p 5500 -c-1 -a localhost -o index.html",
    "serve:debug": "http-server -p 5500 -c-1 -a localhost -o index.html",
    "css:build": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/styles.css --watch=false",
    "css:watch": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/styles.css --watch",
    "css:build:prod": "npx tailwindcss -i ./assets/css/tailwind.css -o ./assets/css/styles.css --minify",
    "modernizr:build": "npx modernizr -c modernizr-config.json -d assets/js/modernizr-custom.js",
    "modernizr:rebuild": "npm run modernizr:build",
    "agent:start": "echo 'Agentic workflow ready. Use GitHub Copilot for AI-assisted development.' && npm run dev",
    "agent:debug": "echo 'Starting debug session with Modernizr feature detection...' && npm run debug",
    "test": "npm run test:html && npm run test:css && npm run test:yaml && npm run test:accessibility:ci",
    "test:html": "html-validate index.html",
    "test:css": "stylelint assets/css/styles.css",
    "test:yaml": "node scripts/validate-yaml.js",
    "test:modernizr": "node -e \"console.log('ðŸ”§ Testing Modernizr build...'); const fs = require('fs'); const path = './assets/js/modernizr-custom.js'; if (fs.existsSync(path)) { const size = fs.statSync(path).size; console.log('âœ… Modernizr build exists:', (size/1024).toFixed(1) + 'KB'); } else { console.error('âŒ Modernizr build missing'); process.exit(1); }\"",
    "test:accessibility": "pa11y http://localhost:3000 --standard WCAG2AA --threshold 0",
    "test:accessibility:ci": "pa11y-ci --threshold 0 index.html",
    "test:axe": "axe --dir . --rules wcag2a,wcag2aa,wcag21aa --tags wcag2a,wcag2aa,wcag21aa",
    "test:performance": "lighthouse http://localhost:3000 --only-categories=performance --output=json",
    "test:lighthouse": "lhci autorun",
    "test:lighthouse:ci": "lhci autorun --upload.target=temporary-public-storage",
    "test:security": "npm audit --audit-level=moderate",
    "validate": "html-validate index.html && stylelint assets/css/styles.css && npm run test:yaml",
    "validate:all": "npm run validate && npm run test:modernizr && echo 'âœ… All validations passed'",
    "serve": "http-server -p 3000 -c-1 -a localhost -o index.html",
    "serve:production": "python3 -m http.server 8080",
    "build": "npm run css:build:prod && npm run modernizr:build && node build.js build && echo 'âœ… Build complete with Tailwind CSS and Modernizr integration'",
    "build:jekyll": "bundle exec jekyll build",
    "serve:jekyll": "bundle exec jekyll serve --livereload",
    "dev:jekyll": "bundle exec jekyll serve --livereload --port=5500",
    "deploy": "gh-pages -d .",
    "accessibility-audit": "pa11y-ci --sitemap false --standard WCAG2AA --threshold 0 index.html",
    "security-audit": "npm audit && echo 'Manual security review recommended - see SECURITY_AUDIT.md'",
    "performance-audit": "lighthouse http://localhost:3000 --view",
    "full-audit": "npm run test && npm run security-audit && npm run performance-audit",
    "workflow:init": "echo 'Initializing agentic workflow...' && npm run build && npm run agent:start",
    "workflow:docs": "echo 'Opening workflow documentation...' && start docs/DEBUG_GUIDE.md",
    "workflow:test": "node scripts/local-test.js",
    "workflow:test:format": "node scripts/local-test.js --format-only",
    "workflow:test:fix": "node scripts/local-test.js --auto-fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bigessfour/TOW.git"
  },
  "keywords": [
    "government",
    "municipal",
    "website",
    "accessibility",
    "ada-compliant",
    "wcag",
    "responsive",
    "static-site"
  ],
  "author": "Town of Wiley Government",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Bigessfour/TOW/issues"
  },
  "homepage": "https://github.com/Bigessfour/TOW#readme",
  "dependencies": {
    "@formatjs/icu-messageformat-parser": "^2.11.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "marked": "^12.0.0",
    "mime-types": "^2.1.35",
    "nodemailer": "^7.0.3",
    "playwright": "^1.52.0"
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@lhci/cli": "^0.15.0",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.10.3",
    "css-validator": "^0.11.0",
    "eslint": "^8.57.1",
    "gh-pages": "^6.0.0",
    "html-validate": "^8.29.0",
    "htmlhint": "^1.5.1",
    "http-server": "^14.1.1",
    "js-beautify": "^1.15.1",
    "js-yaml": "^4.1.0",
    "jshint": "^2.13.6",
    "lighthouse": "^12.6.1",
    "markdown-link-check": "^3.12.2",
    "markdownlint-cli": "^0.39.0",
    "modernizr": "^3.13.1",
    "pa11y": "^9.0.0",
    "pa11y-ci": "^3.1.0",
    "postcss": "^8.5.4",
    "prettier": "^3.2.5",
    "puppeteer": "^24.10.0",
    "purgecss": "^6.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^2.2.19"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "directories": {
    "doc": "docs"
  }
}
